{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "types": [
      "vite/client",
      "jest",
      "@testing-library/jest-dom"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
