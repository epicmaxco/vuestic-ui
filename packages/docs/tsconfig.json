{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "vuestic-ui/*": [
        "../ui/*"
      ]
    },
    "types": [
      "webpack-env",
      "node",
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "./src/examples"
  ],
  // ts-node-specific overrides for compilerOptions
  // any compilerOptions specified here will override the values specified above, *only* when running in ts-node
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript",
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
