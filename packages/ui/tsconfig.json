{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declarationMap": false,
    "allowJs": true,
    // https://vitejs.dev/guide/features.html#typescript-compiler-options
    // disabled because of problems with vue-tsc
    // "isolatedModules": true,
    "types": [
      "vite/client",
      "jest",
      "@testing-library/jest-dom"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "../node_modules",
    "node_modules",
    "src/**/*.spec.disabled.ts",
    "src/components/wip-*/**.*",
    "src/services/api-docs",
    ".storybook",
  ]
}
