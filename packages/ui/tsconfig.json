{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declarationMap": false,
    "allowJs": true,
    // https://vitejs.dev/guide/features.html#typescript-compiler-options
    // disabled because of problems with vue-tsc
    // "isolatedModules": true,
    "types": [
      "webpack-env",
      "jest",
      "vite/client"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.disabled.ts",
    "src/components/wip-*/**.*",
    "src/services/api-docs"
  ]
}
